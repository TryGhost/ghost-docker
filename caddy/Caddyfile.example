{$DOMAIN} {
	import snippets/Logging

	# Traffic Analytics service
	import snippets/TrafficAnalytics

	# ActivityPub Service
	import snippets/ActivityPub

	# Default proxy everything else to Ghost
	handle {
		reverse_proxy ghost:2368
	}

    # Uncomment below if using a separate domain for the admin page. It will allow only the admin origin to embed the site in the `view site` tab.
    # header {
    #   defer
    #   -X-Frame-Options
    #   Content-Security-Policy "frame-ancestors 'self' https://{$ADMIN_DOMAIN}"
    # }

	# Optional: Enable gzip compression
	encode gzip

	# Optional: Add security headers
	import snippets/SecurityHeaders
}

